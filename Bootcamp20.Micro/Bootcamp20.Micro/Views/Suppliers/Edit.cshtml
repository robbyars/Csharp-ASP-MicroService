@model Bootcamp20.Micro.DataAccess.Param.SupplierParam
@{
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @section scripts{
        <script src="~/Content/Admin/assets/plugins/sweetalert/sweetalert.min.js"></script>
        <link href="~/Content/Admin/assets/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
        <script src="~/Scripts/validationEdit.js"></script>
    }
    <div class="form-horizontal">
        <h4>Supplier</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id = "NameSupplier" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" Onclick="return validateData()" value="Save" class="btn pull-right hidden-sm-down btn-success mdi mdi-plus-circle" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>



